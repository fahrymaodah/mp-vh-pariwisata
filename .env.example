# ============================================
# PAR Hotel â€” Property Management System
# Environment Configuration
# ============================================

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME="PAR Hotel"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=https://localhost

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file

# ============================================
# SECURITY
# ============================================
BCRYPT_ROUNDS=12

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Docker: DB_HOST=mysql (service name)
# Local:  DB_HOST=127.0.0.1, DB_PORT=3307
# ============================================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=par_hotel
DB_USERNAME=par_hotel
DB_PASSWORD=par_hotel_secret

# ============================================
# SESSION CONFIGURATION
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ============================================
# CACHE CONFIGURATION
# ============================================
CACHE_STORE=redis

# ============================================
# REDIS CONFIGURATION
# ============================================
# Docker: REDIS_HOST=redis (service name)
# Local:  REDIS_HOST=127.0.0.1, REDIS_PORT=6380
# ============================================
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================
# QUEUE CONFIGURATION
# ============================================
QUEUE_CONNECTION=database

# ============================================
# FILESYSTEM CONFIGURATION
# ============================================
FILESYSTEM_DISK=local
BROADCAST_CONNECTION=log

# ============================================
# MAIL CONFIGURATION
# ============================================
# Production: smtp / mailgun / ses
# Development: log / array / mailpit
# ============================================
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@parhotel.test"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# VITE / FRONTEND
# ============================================
VITE_APP_NAME="${APP_NAME}"
